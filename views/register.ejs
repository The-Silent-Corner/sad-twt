<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include("partials/headings") %>
    <title>Register</title>
</head>
<body class="has-navbar-fixed-top">

<%- include("partials/navbar-normal") %>

<section class="section column">
    <div class="title container has-text-centered">Register</div>
    <form action="/register" method="post">
        <div class="container column is-half">
            <label for="email" class="label">
                Email
                <input type="email" class="input" required name="email">
            </label>
            <label for="password" class="label">
                Password
                <input id="register-password1" type="password" class="input" required name="password1">
            </label>
            <label for="password-confirm" class="label">
                Confirm password
                <input id="register-password2" type="password" class="input" required name="password2">
            </label>
            <div class="container column has-text-centered">
                <div id="register-button-notification" class="notification is-danger is-light" hidden>
                    Passwords do not match
                </div>
                <button id="register-button" class="button">Register</button>
            </div>
        </div>
    </form>
</section>

<%- include("partials/footer") %>

</body>
</html>

<script>
  let pw2ChangedYet = false;
  function setClasses() {

  }

  function checkPasswordEquality() {
    const p1 = $("#register-password1").val()
    const p2 = $("#register-password2").val()

    if(!pw2ChangedYet) {
      return;
    }

    if(p1 !== p2) {
      $("#register-password1").addClass("is-danger");
      $("#register-password2").addClass("is-danger");
      $("#register-button-notification").show();
      $("#register-button").attr("disabled", true)
    } else {
      $("#register-password1").removeClass("is-danger");
      $("#register-password2").removeClass("is-danger");
      $("#register-button-notification").hide();
      $("#register-button").attr("disabled", false)
    }
  }

  $("#register-password1").on("keyup", () => {
    checkPasswordEquality();
  })

  $("#register-password2").on("keyup", () => {
    pw2ChangedYet = true
    checkPasswordEquality();
  })
</script>