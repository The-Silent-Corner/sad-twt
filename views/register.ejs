<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include("partials/headings") %>
    <title>Register</title>
</head>
<body class="has-navbar-fixed-top">

<%- include("partials/navbar-normal") %>

<section class="section column">
    <div class="title container has-text-centered">Register</div>
    <form action="/register" method="post">
        <div class="container column is-half">
            <label for="email" class="label">
                Email
                <input type="email" class="input" required name="email">
            </label>
            <label for="password" class="label">
                Password
                <input type="password" class="input" required name="password1">
            </label>
            <label for="password-confirm" class="label">
                Confirm password
                <input type="password" class="input" required name="password2">
            </label>
            <div class="container column has-text-centered">
                <button class="button">Register</button>
            </div>
        </div>
    </form>
</section>

<%- include("partials/footer") %>

</body>
</html>